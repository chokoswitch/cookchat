{
  "hosting": {
    "public": "dist/client",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/:path**/index.html",
        "destination": "/:path/",
        "type": 301
      },
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/frontendapi.ChatService/**",
        "run": {
          "serviceId": "frontend-server",
          "region": "asia-northeast1"
        }
      }
    ]
  }
}
